{
  "compilerOptions": {
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./",
    "strict": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["./src/*"],
      "@libs/*": ["./util/*"]
    },
    "skipLibCheck": true,
    "noEmitOnError": true
  }
}